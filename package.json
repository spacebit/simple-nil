{
  "name": "simple-nil",
  "version": "0.1.1",
  "description": "nil-chain client side utils",
  "keywords": [
    "nil",
    "blockchain",
    "client",
    "contracts"
  ],
  "homepage": "https://github.com/spacebit/simple-nil",
  "bugs": {
    "url": "https://github.com/spacebit/simple-nil/issues"
  },
  "author": "Max Andreev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spacebit/simple-nil.git"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",        
  "module": "dist/index.js",       
  "types": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",                 
  "scripts": {
    "build": "rollup -c && cp dist/index.d.ts dist/index.d.cts",
    "clean": "rm -rf dist",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "format": "prettier --write \"**/*.{ts,tsx,js}\"",
    "prepublishOnly": "yarn build",
    "release": "standard-version",
    "publish:npm": "yarn publish",
    "release:publish": "yarn release && yarn publish:npm",
    "ci": "yarn build && yarn check-format && yarn check-exports"
  },
  "dependencies": {
    "@nilfoundation/niljs": "0.14.0",
    "events": "^3.3.0",
    "ts-essentials": "^10.0.2",
    "viem": "^2.21.7",
    "tslib": "^2.5.3"             
  },
  "peerDependencies": {
    "abitype": "^1.0.6"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "prettier": "^3.3.3",
    "standard-version": "^9.5.0",
    "typescript": "^5.6.2",
    "rollup": "^3.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@rollup/plugin-json": "^5.0.0",  
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2"
  }
}
